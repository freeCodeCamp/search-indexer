{
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "max-len": [
      "error",
      { "code": 80, "ignoreUrls": true, "ignoreTemplateLiterals": true }
    ],
    "quotes": [2, "single", "avoid-escape"]
  }
}
