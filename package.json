{
  "name": "serverless-indexer",
  "version": "1.0.0",
  "description": "",
  "main": "handler.js",
  "type": "module",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "sls": "serverless",
    "start": "sls offline",
    "deploy": "sls deploy --stage prod",
    "deploy-dev": "sls deploy",
    "predo-deploy": "doctl serverless connect prd-search-indexer",
    "do-deploy": "doctl serverless deploy do-functions --env './do-functions/.env.prd'",
    "predo-deploy-dev": "doctl serverless connect dev-search-indexer",
    "do-deploy-dev": "doctl serverless deploy do-functions --env './do-functions/.env.dev'",
    "do-list-namespaces": "doctl serverless namespaces list",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "npm-run-all lint:*",
    "lint:code": "eslint . --cache",
    "lint:pretty": "prettier --ignore-path .gitignore --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "algoliasearch": "4.24.0"
  },
  "devDependencies": {
    "@babel/core": "7.26.0",
    "@babel/eslint-parser": "7.25.9",
    "@eslint/js": "9.13.0",
    "eslint": "9.13.0",
    "eslint-config-prettier": "9.1.0",
    "globals": "15.11.0",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "npm-run-all2": "7.0.1",
    "prettier": "3.3.3",
    "serverless": "3.39.0",
    "serverless-offline": "13.8.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "license": "BSD-3-Clause"
}
